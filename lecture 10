#include <iostream>
using namespace std;


void swaparray(int a[], int size) {
    for (int i = 0; i < size; i++) {
        cout << a[i] << " ";
    }
    cout << endl;  
}

void swap(int a[], int size) {
    int start = 0;
    int end = 1;

    while (end <=6) {  
        swap(a[start], a[end]);
        start=start+2;
        end=end+2;
    }
}

int main() {
    int a[] = {1,2,3,4,5,6};
    int size = sizeof(a) / sizeof(int);
    
    

    swap(a, size);

    cout << "swaped array": ";
    swaparray(a, size);

    return 0;
}

