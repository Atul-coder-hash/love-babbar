#include <iostream>
using namespace std;
void printarray(int a[],int size)
{cout<<"Sorted array:-";
    for(int i=0;i<size;i++)
    {
        cout<<a[i];
    }
    
}
void sort0and1(int a[],int size)
{int i=0,j=size-1;
    while(i<j)
    {
        if(a[i]==0&&i<j) // make sure i<j
        {
            i++;
        }
        if(a[j]==1&&i<j)// make sure i<j
        {
            j--;
        }
        if(a[i]==1&&a[j]==0&&i<j)// make sure i<j
        {
            swap(a[i],a[j]);
        }
    }
    printarray(a,size);
}
int main()
{
    int a[]={0,1,1,0,0,1};
    int size = sizeof(a)/sizeof(int);
    sort0and1(a,size);
   }
   
