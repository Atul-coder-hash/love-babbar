#include <iostream>
using namespace std;


void swaparray(int a[], int size) {
    for (int i = 0; i < size; i++) {
        cout << a[i] << " ";
    }
    cout << endl;  
}

void swap(int a[], int size) {
    int start = 0;
    int end = 1;

    while (start<=size) {  
        swap(a[start], a[end]);
        start=start+2;
        end=end+2;
    }
    cout << " Alternative swaped array:-";
    swaparray(a, size);
     
}

int main() {
    int a[] = {1,2,3,4,5,6,9,8};
    int size = sizeof(a) / sizeof(int);
    
    
    cout<<"original array:-";
    swaparray(a,size);


    swap(a, size);

    

    return 0;
}
