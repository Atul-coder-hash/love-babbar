#include<iostream>
using namespace std;


int  max(int a[],int size)
{int s= 0,e= size-1;

    int mid = s+(e-s)/2;
    while(s<e)
    {
        if(a[mid]<a[mid+1])
        {
            s=mid+1;
        }
        else 
        {
            e=mid;
        }
        mid = s+(e-s)/2;
    }
    return s;
    
}

int main()
{int key;
int a[]={0,2,6,8,7,5,3};
int size = sizeof(a)/sizeof(int);

cout<<"Max value:-";
cout<<max(a,size);
}
