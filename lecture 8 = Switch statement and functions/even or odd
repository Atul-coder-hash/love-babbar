#include<iostream>
using namespace std;

bool iseven(int a)
{
    if(a&1)       // This check least significant digit(LSB) if LSB is 1 then it is odd otherwise even   
    {
        return 0;
    }
    else
    {
        return 1;
    }
}
int main()
{
   int num;
   cout<<"enter number:-";
   cin>>num;
   if(iseven(num))
   {
       cout<<"Number is even"<<endl;
   }
   else
   {
       cout<<"Number is odd"<<endl;
   }
   
}
