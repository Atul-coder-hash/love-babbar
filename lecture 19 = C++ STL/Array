
#include<iostream>
#include<array>           // Header file for array stl


using namespace std;
int main()
{
    array<int,4> a={1,2,3,4}; // array<datatype,size> variable name ={elements}
    int size = a.size(); // directly find the size

    for(int i=0;i<size;i++)
    {
        cout<<a[i]<<endl;
    }


    cout<<"Element at 2nd Index->"<<a.at(2)<<endl;
    cout<<"Empty or not->"<<a.empty()<<endl;    // return answer in boolean

    cout<<"First element ->"<<a.front()<<endl;  // return first element of array
    cout<<"last element ->"<<a.back()<<endl;    // return last element of array
}

